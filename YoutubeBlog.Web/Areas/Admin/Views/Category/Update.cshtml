@model CategoryUpdateDto

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="f2-bold py-3 mb-4">
        <span class="text-muted fw-light">Category Management</span>/Add a Category
    </h4>

    <div class="row g-6">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">Default</h5>
                <form asp-controller="Category" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group">
                            <label asp-for="Name" id="defaultFormControlInput" class="form-label">Category Name</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Category Name" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>