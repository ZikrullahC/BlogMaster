@model List<CategoryDto>

<div class="container--xxl flex-grow-1 container-p-y">

    @{
        @if (!User.IsInRole($"{RoleConsts.User}"))
        {
            <h4 class="fw-bold py-3 mb-4">
                <span class="text-muted fw-light">Category Managament/</span>Category
            </h4>
        }
    }

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Category Managament/</span>Categories
    </h4>

    <div class="card m-3">
        <div class="table-responsive text-nowrap m-5">

            @{
                if (@User.IsInRole($"{RoleConsts.User}"))
                {
                    <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Category" asp-action="Add">
                        Add Category <i class="bx bx-plus"></i>
                    </a>
                }
            }           

            <table class="table table-bordered" id="categoriesTable" width="100%" cellpadding="0">
                <thead>
                    <tr>

                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Status</th>
                        @{
                            @if (!User.IsInRole($"{RoleConsts.User}"))
                            {
                                <th>Transactions</th>
                            }
                        }    
                    </tr>
                </thead>
                @* <tfoot>
                <tr>

                <th>Name</th>
                <th>Created Date</th>
                <th>Created By</th>
                <th>Status</th>
                <th>Transactions</th>
                </tr>
                </tfoot> *@
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <td>@category.Name</td>
                            <td>@category.CreatedDate.ToShortDateString()</td>
                            <td>@category.CreatedBy</td>
                            <td>@(category.IsDeleted ? "Not active" : "Active")</td>

                            @{
                                @if (!User.IsInRole($"{RoleConsts.User}"))
                                {
                                <td>
                                    <a class="btn btn-primary btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-categoryId="@category.Id"><i class="bx bxs-edit"></i></a>
                                    <a class="btn btn-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id"><i class="bx bx-minus-circle"></i></a>
                                </td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/categoryIndex.js"></script>
}