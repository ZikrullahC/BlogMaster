@model UserUpdateDto

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="f2-bold py-3 mb-4">
        <span class="text-muted fw-light">User Management</span>/Update a User
    </h4>

    <div class="row g-6">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">Default</h5>
                <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color: red"></div>
                    <input type="hidden" asp-for="Id"/>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FirstName" id="defaultFormControlInput" class="form-label">First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="First Name" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" id="defaultFormControlInput" class="form-label">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Last Name" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" id="defaultFormControlInput" class="form-label">Email</label>
                            <input asp-for="Email" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Email" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" id="defaultFormControlInput" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Phone Number" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleId" id="defaultFormControlInput" class="form-label">User Role</label>
                            <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles, "Id", "Name", Model.RoleId))"></select>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>